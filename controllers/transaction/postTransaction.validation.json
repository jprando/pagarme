{
  "ukey": {
    "type":"string",
    "presence": {
      "message": "^UKEY must be informed",
      "allowEmpty": false
    },
    "length": {
      "is": 36,
      "tooLong": "^UKEY  is too long (maximum is 11 characters)",
      "notValid": "^UKEY notValid ...",
      "wrongLength": "^UKEY must be Alphanumeric value of 36 characters"
    },
    "format": {
      "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
      "message": "^UKEY is not in a valid format UUID"
    }
  },
  "paymentDate":{
    "type": "string",
    "presence":{
      "allowEmpty": false
    },
    "datetime": {
      "earliest": "1901-01-01",
      "latest": "9998-01-01"
    }
    },
  "amount": {
    "type":"number",
    "presence":{
      "allowEmpty": false
    },
    "numericality":{
      "greaterThanOrEqualTo": 0.001
    }
  },
  "description": {
    "type":"string",
    "presence":{
      "allowEmpty": false
    },
    "length":{
      "minimum": 6
    }
  },
  "paymentMethod": {
    "type":"string",
    "presence":{
      "allowEmpty": false
    },
    "inclusion": ["credit_card", "debit_card"],
    "length":{
      "minimum": 10,
      "maximum": 11
    }
  },
  "cardNumber":{
    "type":"string",
    "presence":{
      "allowEmpty": false
    },
    "format": {
      "pattern": "^(?:4[0-9]{12}(?:[0-9]{3})?|[25][1-7][0-9]{14}|6(?:011|5[0-9][0-9])[0-9]{12}|3[47][0-9]{13}|3(?:0[0-5]|[68][0-9])[0-9]{11}|(?:2131|1800|35\\d{3})\\d{11})$",
      "message":"^CARD NUMBER format is invalid"
    }
  },
  "cardholderName": {
    "type":"string",
    "presence":{
      "allowEmpty": false
    },
    "length": {
      "maximum": 255
    }
  },
  "cardExpiration": {
    "type":"string",
    "presence":{
      "allowEmpty": false
    },
    "length": {
      "is": 7
    },
    "format": {
      "pattern": "(0[1-9]|1[0-2])\/((19[0-9]{2})|(20[0-9]{2})$)",
      "message": "CARD EXPIRATION format is invalid"
    }
  },
  "cardSecurityCode": {
    "type":"string",
    "presence":{
      "allowEmpty": false
    },
    "length": {
      "is": 3
    }
  }
}
