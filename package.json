{
  "name": "pagarme",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "env NODE_ENV=production node index.js && env NODE_ENV=production pm2 start -n pagarme-backend -i max index.js",
    "stop": "pm2 stop all && pm2 delete all && pm2 kill",
    "status": "pm2 status pagarme-backend",
    "logs": "pm2 logs pagarme-backend",
    "dev": "env NODE_ENV=development nodemon index.js",
    "db:sync": "env PG_SYNC=true NODE_ENV=development node index.js",
    "db:clean:sync": "env PG_SYNC=force NODE_ENV=development node index.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nodemodule": "^0.3.0",
    "pg": "^7.18.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.2.3",
    "sequelize": "^5.21.3",
    "uuid": "^3.4.0",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "sequelize-cli": "^5.5.1"
  }
